<h1>Listing Tasks</h1>
<ol class="breadcrumb">
  <li><%= link_to "Projects", projects_path%></li>
</ol>
<table class="table table-bordered table-striped" id="sortable">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Status</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr data-item-id= <%= "#{task.id}" %> class="item">
        <td><input type="checkbox" <% if task.finished? %>checked<% end %></td>
        <td><%= link_to "mark as finished", complete_task_path(task.id), method: :patch %></td>
        <td><% if task.finished? %><strike><%= task.title%></strike><% else %><%= task.title %><% end %></td>
        <td><%= task.content %></td>
        <td><%= task.status %></td>
        <td><%= link_to task.project.title, task.project %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %>  <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

